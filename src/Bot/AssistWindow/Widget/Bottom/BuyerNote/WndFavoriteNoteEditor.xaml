<et:EtWindow
	x:Class="Bot.AssistWindow.Widget.Bottom.BuyerNote.WndFavoriteNoteEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Bot.AssistWindow.Widget.Bottom.BuyerNote" xmlns:et="clr-namespace:Bot.Common.Windows"
	et:Title="常用便签编辑器"
	Height="300"
	Width="500">
	<Grid
		Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="auto" />
			<RowDefinition />
			<RowDefinition
				Height="auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Text="常用便签：" />
		<TextBox
			Name="tboxContent"
			Grid.Row="1"
			Height="200"
			VerticalScrollBarVisibility="Auto"
			AcceptsReturn="True"
			AcceptsTab="True"
			TextWrapping="Wrap"
			Padding="3" />
		<StackPanel
			Orientation="Horizontal"
			Grid.Row="2"
			HorizontalAlignment="Right"
			Margin="0 10 0 0">
			<Button
				Content="取消"
				Margin="0 0 20 0"
				IsDefault="True"
				Click="btnClose_Click" />
			<Button
				Content="确定"
				IsCancel="True"
				Click="BtnOk_Click" />
		</StackPanel>
	</Grid>
</et:EtWindow>
