<local:EtWindow
	x:Class="Bot.Common.Windows.WndNotTipAgain" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:Bot.Common.Windows"
	Title="提示"
	Width="400"
	SizeToContent="Height">
    <Grid
		Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
				Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
			Name="tblContent"
			LineHeight="20"
			TextWrapping="WrapWithOverflow" />
        <StackPanel
			Margin="0 20 0 0"
			Grid.Row="1"
			Orientation="Horizontal"
			HorizontalAlignment="Right">
            <CheckBox
				Padding="10 5"
				Margin="10"
				VerticalContentAlignment="Center"
				Content="不再提示(_N)"
				Checked="chkTip_Checked"
				Unchecked="chkTip_UnChecked" />
            <Button
				Name="btnCancel"
				Padding="10 5"
				Margin="10"
				Content="取消(_C)"
				Click="btnCancel_Click" />
            <Button
                Name="btnOk"
				Padding="10 5"
				Margin="10 10 0 10"
				Content="确定(_Y)"
				Click="btnOk_Click" />
        </StackPanel>
    </Grid>
</local:EtWindow>
