<UserControl
	x:Class="Bot.Common.TreeviewHelper.CtlCatalog" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Bot.Common.TreeviewHelper" 
    xmlns:ht="clr-namespace:BotLib.Wpf.Controls;assembly=BotLib"
	Padding="3,4"
	HorizontalAlignment="Stretch">
    <StackPanel
		Name="spn"
		Orientation="Horizontal">
        <Image
			Name="imgClose"
			Source="{StaticResource imgFolderClose16}" />
        <Image
			Name="imgOpen"
			Source="{StaticResource imgFolderOpen16}"
			Visibility="Collapsed" />
        <ht:CtlHighlightableTextBlock
			FrameworkElement.VerticalAlignment="Center"
			TextBlock.Padding="5,0"
			x:Name="tbkHeader" />
    </StackPanel>
</UserControl>
